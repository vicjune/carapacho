{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "outDir": "lib",
    "sourceMap": true,
    "target": "es2017",

    /* Linting */
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
